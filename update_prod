#!/bin/bash
msglog="/var/log/update_preprod.log"
log()
{
        echo "$(date) ${1:-missing}" >> $msglog
}
dir="preprod.pole-talents.fr/htdocs"
log "------------ Update PROD ------------"
echo -n "GIT => " >> $msglog
git=`git -C ~/$dir pull | tee -a $msglog`
[[ "$git" =~ "Already up-to-date" ]]  || /usr/local/bin/gulp --cwd $dir deploy --prod &>> $msglog
log "-------------------------------------"
exit 0